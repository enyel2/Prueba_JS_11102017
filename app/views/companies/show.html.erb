<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Information:</strong>
  <%= @company.information %>
</p>

<%= form_for([@company, @comment], remote: true) do |f| %>
	<%= f.label :complaint, "Reclamos" %> <br>
 	<%= f.text_area :complaint %>
 	<%= f.submit "Reclamos" %>
<% end %>

<br><br><br>

<ul>
	<% @comments.each do |comment| %>
		<%= render 'show_comments', comment: comment %>
	<% end %>
</ul>

<%= link_to 'Edit', edit_company_path(@company) %> |
